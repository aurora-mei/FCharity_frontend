.request-card {
    margin-bottom: 20px;
    padding: 20px;
    background: white;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.request-card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.request-card-title {
    margin: 0;
}

.request-card-actions {
    display: flex;
    justify-content: flex-end;
    gap: 10px;
    margin-top: 20px;
}